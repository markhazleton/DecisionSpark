@model DecisionSpark.Areas.Admin.ViewModels.DecisionSpecs.DecisionSpecDetailsViewModel
@{
    ViewData["Title"] = $"Details: {Model.SpecId}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Decision Specs</a></li>
                    <li class="breadcrumb-item active">@Model.SpecId</li>
                </ol>
            </nav>
            <h1 class="h2">
                <i class="bi bi-diagram-3"></i> @Model.Metadata.Name
                <span class="@Model.StatusBadgeClass ms-2">@Model.Status</span>
            </h1>
            <p class="text-muted"><code>@Model.SpecId</code> v@Model.Version</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Edit", new { specId = Model.SpecId })" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Overview Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Overview</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Metadata.Name</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Metadata.Description) ? "(none)" : Model.Metadata.Description)</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9"><span class="@Model.StatusBadgeClass">@Model.Status</span></dd>

                        <dt class="col-sm-3">Version:</dt>
                        <dd class="col-sm-9"><code>@Model.Version</code></dd>

                        <dt class="col-sm-3">Questions:</dt>
                        <dd class="col-sm-9">@Model.QuestionCount</dd>

                        <dt class="col-sm-3">Outcomes:</dt>
                        <dd class="col-sm-9">@Model.OutcomeCount</dd>

                        @if (Model.Metadata.Tags.Any())
                        {
                            <dt class="col-sm-3">Tags:</dt>
                            <dd class="col-sm-9">
                                @foreach (var tag in Model.Metadata.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag</span>
                                }
                            </dd>
                        }

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">
                            @Model.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt") 
                            @if (!string.IsNullOrWhiteSpace(Model.CreatedBy))
                            {
                                <text>by <strong>@Model.CreatedBy</strong></text>
                            }
                        </dd>

                        <dt class="col-sm-3">Last Updated:</dt>
                        <dd class="col-sm-9">
                            @Model.UpdatedAt.ToString("MMM d, yyyy 'at' h:mm tt") 
                            @if (!string.IsNullOrWhiteSpace(Model.UpdatedBy))
                            {
                                <text>by <strong>@Model.UpdatedBy</strong></text>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Audit History Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit History</h5>
                </div>
                <div class="card-body">
                    @if (Model.AuditHistory.Any())
                    {
                        <div class="timeline">
                            @foreach (var audit in Model.AuditHistory.OrderByDescending(a => a.CreatedAt))
                            {
                                <div class="timeline-item mb-4">
                                    <div class="d-flex">
                                        <div class="timeline-marker me-3">
                                            <div class="timeline-dot bg-primary"></div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <span class="@audit.ActionBadgeClass">@audit.Action</span>
                                                        @audit.Summary
                                                    </h6>
                                                    <p class="text-muted small mb-0">
                                                        <i class="bi bi-person"></i> @audit.Actor
                                                        <span class="mx-2">•</span>
                                                        <i class="bi bi-laptop"></i> @audit.Source
                                                        <span class="mx-2">•</span>
                                                        <i class="bi bi-clock"></i> @audit.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No audit history available.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Lifecycle Controls Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-arrow-repeat"></i> Lifecycle Actions</h6>
                </div>
                <div class="card-body">
                    @if (Model.AvailableTransitions.Any())
                    {
                        <p class="small text-muted mb-3">Transition this spec to a new status:</p>
                        @foreach (var transition in Model.AvailableTransitions)
                        {
                            <form asp-action="TransitionStatus" asp-route-specId="@Model.SpecId" method="post" class="mb-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="newStatus" value="@transition" />
                                <input type="hidden" name="etag" value="@Model.ETag" />
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-arrow-right-circle"></i> Move to @transition
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No transitions available from @Model.Status status.</p>
                    }

                    <hr class="my-3" />

                    <!-- Delete/Restore Actions -->
                    @if (Model.Status != "Retired")
                    {
                        <form asp-action="Delete" asp-route-specId="@Model.SpecId" asp-route-version="@Model.Version" method="post" 
                              onsubmit="return confirm('Are you sure you want to delete this DecisionSpec? It can be restored within the retention period.');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="etag" value="@Model.ETag" />
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Delete Spec
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h6>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Edit", new { specId = Model.SpecId })" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-pencil"></i> Edit Spec
                    </a>
                    <a href="/api/decisionspecs/@Model.SpecId/full" target="_blank" class="btn btn-outline-secondary w-100 mb-2">
                        <i class="bi bi-code-square"></i> View JSON
                    </a>
                    <button type="button" class="btn btn-outline-info w-100" onclick="copySpecId()">
                        <i class="bi bi-clipboard"></i> Copy Spec ID
                    </button>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Status Information</h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li><strong>Draft:</strong> Work in progress, not visible to runtime</li>
                        <li><strong>In Review:</strong> Ready for approval</li>
                        <li><strong>Published:</strong> Active and serving runtime requests</li>
                        <li><strong>Retired:</strong> Archived, no longer in use</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline {
            position: relative;
        }

        .timeline-item {
            position: relative;
        }

        .timeline-marker {
            position: relative;
            z-index: 2;
        }

        .timeline-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 3px solid #fff;
            box-shadow: 0 0 0 2px #0d6efd;
        }

        .timeline-item:not(:last-child) .timeline-marker::after {
            content: '';
            position: absolute;
            top: 12px;
            left: 5px;
            width: 2px;
            height: calc(100% + 16px);
            background-color: #dee2e6;
        }
    </style>
}

@section Scripts {
    <script>
        function copySpecId() {
            const specId = '@Model.SpecId';
            navigator.clipboard.writeText(specId).then(() => {
                alert('Spec ID copied to clipboard: ' + specId);
            }).catch(err => {
                console.error('Failed to copy:', err);
            });
        }
    </script>
}
