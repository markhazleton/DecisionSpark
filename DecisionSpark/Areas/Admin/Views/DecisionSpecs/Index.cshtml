@model DecisionSpark.Areas.Admin.ViewModels.DecisionSpecs.DecisionSpecListViewModel
@{
    ViewData["Title"] = "Decision Specs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">
                <i class="bi bi-diagram-3"></i> Decision Specs
            </h1>
            <p class="text-muted">Manage decision specifications and their lifecycle</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Spec
            </a>
            <button type="button" class="btn btn-success ms-2" data-bs-toggle="modal" data-bs-target="#llmAssistModal">
                <i class="bi bi-magic"></i> LLM Create
            </button>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search and Filter Panel -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Search by name, ID, or description..." 
                           value="@Model.SearchTerm">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="Draft" selected="@(Model.StatusFilter == "Draft")">Draft</option>
                        <option value="InReview" selected="@(Model.StatusFilter == "InReview")">In Review</option>
                        <option value="Published" selected="@(Model.StatusFilter == "Published")">Published</option>
                        <option value="Retired" selected="@(Model.StatusFilter == "Retired")">Retired</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="owner" class="form-label">Owner</label>
                    <input type="text" class="form-control" id="owner" name="owner" 
                           placeholder="Filter by owner..." 
                           value="@Model.OwnerFilter">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Summary -->
    <div class="row mb-3">
        <div class="col">
            <p class="text-muted mb-0">
                Showing @(Model.Items.Count) of @Model.Total specs
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || !string.IsNullOrWhiteSpace(Model.StatusFilter) || !string.IsNullOrWhiteSpace(Model.OwnerFilter))
                {
                    <text>(filtered)</text>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-link">Clear filters</a>
                }
            </p>
        </div>
    </div>

    <!-- Decision Specs Table -->
    @if (Model.Items.Any())
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Spec ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Owner</th>
                            <th>Version</th>
                            <th>Questions</th>
                            <th>Last Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var spec in Model.Items)
                        {
                            <tr>
                                <td>
                                    <code>@spec.SpecId</code>
                                    @if (spec.HasUnverifiedDraft)
                                    {
                                        <span class="badge bg-warning ms-1" title="Has unverified LLM draft">
                                            <i class="bi bi-exclamation-triangle"></i>
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", new { specId = spec.SpecId })">
                                        @spec.Name
                                    </a>
                                </td>
                                <td>
                                    <span class="@spec.StatusBadgeClass">@spec.Status</span>
                                </td>
                                <td>@spec.Owner</td>
                                <td><small class="text-muted">@spec.Version</small></td>
                                <td class="text-center">@spec.QuestionCount</td>
                                <td>
                                    <small class="text-muted" title="@spec.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")">
                                        @spec.UpdatedAt.ToString("MMM d, yyyy")
                                    </small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", new { specId = spec.SpecId })" 
                                           class="btn btn-outline-secondary" 
                                           title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { specId = spec.SpecId })" 
                                           class="btn btn-outline-primary" 
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Decision spec pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" 
                           href="@Url.Action("Index", new { page = Model.Page - 1, search = Model.SearchTerm, status = Model.StatusFilter, owner = Model.OwnerFilter })">
                            Previous
                        </a>
                    </li>

                    @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" 
                               href="@Url.Action("Index", new { page = i, search = Model.SearchTerm, status = Model.StatusFilter, owner = Model.OwnerFilter })">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" 
                           href="@Url.Action("Index", new { page = Model.Page + 1, search = Model.SearchTerm, status = Model.StatusFilter, owner = Model.OwnerFilter })">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h3 class="mt-3">No Decision Specs Found</h3>
                <p class="text-muted">
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || !string.IsNullOrWhiteSpace(Model.StatusFilter) || !string.IsNullOrWhiteSpace(Model.OwnerFilter))
                    {
                        <text>Try adjusting your filters or</text>
                        <a href="@Url.Action("Index")">clear all filters</a>
                    }
                    else
                    {
                        <text>Get started by creating your first decision spec</text>
                    }
                </p>
                <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create New Spec
                </a>
            </div>
        </div>
    }
</div>

<!-- Include LLM Assist Modal -->
<partial name="_LlmAssistModal" />

@section Scripts {
    <script>
        // Auto-submit search form on status/owner change for better UX
        document.getElementById('status').addEventListener('change', function() {
            this.closest('form').submit();
        });
    </script>
}
