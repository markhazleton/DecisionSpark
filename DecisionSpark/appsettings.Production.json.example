{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "LogDirectory": "C:\\websites\\DecisionSpark\\logs"
  },
  "DecisionEngine": {
    "ConfigPath": "C:\\websites\\DecisionSpark\\configurations\\DecisionSpecs",
    "DefaultSpecId": "TECH_STACK_ADVISOR_V1",
    "ApiKey": "change-this-in-production"
  },
  "ConversationStorage": {
    "Path": "C:\\websites\\DecisionSpark\\conversations"
  },
  "DecisionSpecs": {
    "RootPath": "C:\\websites\\DecisionSpark\\DecisionSpecs",
    "SoftDeleteRetentionDays": 30,
    "IndexFileName": "DecisionSpecIndex.json"
  },
  "OpenAI": {
    "Provider": "OpenAI",
    "ApiKey": "production-key-from-keyvault",
    "Model": "gpt-4",
    "MaxTokens": 500,
    "Temperature": 0.7,
    "EnableFallback": false,
    "TimeoutSeconds": 30
  },
  "AllowedHosts": "*"
}
